<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="formkey"/>
    <head>
    	<title>Banners</title>
    </head>
    <body>
    	<referenceBlock name="menu">
    	    <action method="setActive">
    	        <argument name="itemId" xsi:type="string">Magestio_Slider::slider</argument>
    	    </action>
    	</referenceBlock>
    	<referenceBlock name="page.title">
    	    <action method="setPageTitle">
    	        <argument name="pageTitle" xsi:type="string" translate="true">Banners</argument>
    	    </action>
    	</referenceBlock>
        <referenceContainer name="content">
            <block class="Magestio\Slider\Block\Adminhtml\Banner" name="admin.block.banner.grid.container"/>
        </referenceContainer>
    </body>
</page>
