        <resources>
            <resource id="Magento_Backend::admin">

                <resource id="Magestio_Core::menu">
                    <resource id="Magestio_Slider::menu_slider" title="Slider" translate="title" sortOrder="10">
                        <resource id="Magestio_Slider::menu_slider_manage" title="Manage Sliders" translate="title" sortOrder="10"/>
